<%- include('header') -%> 

<h1>Editar Película</h1>

<% if (typeof errors != 'undefined') { %>
    <p style="color:red">¡ERROR!</p>
     <ul>
         <% for( let i = 0; i < errors.length; i++ ) { %>
         <li>
             <%= errors[i].msg %> 
         </li>
         <% } %>
     </ul>
   <% } %>

<form action="/movies/edit/<%= pelicula.id %> " method="POST">
    <div>
        <label for="">Titulo</label>
        <input type="text" name="titulo" value="<%= pelicula.title %>" id="">
    </div>
    <div>
        <label for="">Premios</label>
        <input type="text" name="premios" value="<%= pelicula.awards %>" id="">
    </div>
    <div>
        <label for="">Duración</label>
        <input type="text" name="length" value="<%= pelicula.length %>" id="">
    </div>
    <div>
        <label for="">Rating</label>
        <input type="text" name="rating" value="<%= pelicula.rating %>" id="">
    </div>
    <div>
        <label for="">Fecha de Estreno</label>
        <input type="text" name="release_date" value="<%= pelicula.release_date %>" id="">
    </div>
    <div>
        <label for="">Género</label>
        <select name="genero" id="">

            <% for( let i = 0; i < generos.length; i++ ) { %>
                <% if (generos[i].id == pelicula.genre_id) { %>
                    <option value="<%= generos[i].id %>" selected>
                        <%= generos[i].name %> 
                    </option>
                <% } else { %>
                    <option value="<%= generos[i].id %>">
                        <%= generos[i].name %> 
                    </option>
                <% } %>
                
                
            <% } %>
            
        </select>
    </div>
    <button type="submit">Editar</button>
</form>
<%- include('footer') -%> 