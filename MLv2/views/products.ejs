<%- include('./partials/head') %> 

<body>
    	<!-- Header -->
    <%- include('./partials/header') %> 
    

    <div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
                <h2 class="products-title">Detalle del producto: <%= product.name %> </h2>
            </div>
        </div>
        <div class="product-detail">
                <div class="row">
            
                    <div class="col-12 col-sm-6 col-lg-8">
                        <section class="product-box">
                                <figure class="product-box_image">
                                    <img src="/images/products/<%= product.image %>" alt="<%= product.name %> ">
                                </figure>
                                <p><%= product.description %> </p>
                        </section>
                    </div>

                    <div class="col-12 col-sm-6 col-lg-4">
                        <article class="product-box_data">
							<h2 class="products.title"><%= product.name %></h2>
							<!-- CONDICIONAL DESCUENTO -->
							<% if(product.discount>0){ %> 
								<span><%= product.price %> /<%= product.discount %>% OFF</span>
                            <% } %> 
                            <% let precioFinal = product.price-(product.discount*product.price/100) %> 
							<h2 class="product.title"><%= aMiles(precioFinal) %></h2>
							<p><%= product.name %> </p>
						</article>
                    </div>

            </div>
        </div>
    </div>


    	<!-- footer -->
	<%- include('./partials/footer') %> 
</body>