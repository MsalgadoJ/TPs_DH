<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			<% visitados.forEach(visitado => {%> 

				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= visitado.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= visitado.image %>" alt="<%= visitado.name %> ">
							</figure>
							<article class="product-box_data">
								<!-- VARIABLE PRECIO -->
								<% let precioFinal = visitado.price-(visitado.discount*visitado.price/100)%> 
								<% precioFinal = Math.round(precioFinal) %>
								<h2><%= aMiles(precioFinal) %></h2>
								<!-- CONDICIONAL DESCUENTO -->
								<% if(visitado.discount>0){ %> 
									<span><%= visitado.discount %>% OFF</span>
								<% } %> 
								<p><%= visitado.name %> </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
				<% }) %> 
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% for( let i = 0; i < ofertas.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= ofertas[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= ofertas[i].image %> " alt="<%= ofertas[i].name %> ">
							</figure>
							<article class="product-box_data">
								<!-- VARIABLE PRECIO -->
								<% let precioFinal = ofertas[i].price-(ofertas[i].discount*ofertas[i].price/100) %> 
								<h2><%= aMiles(precioFinal) %></h2>
								<!-- CONDICIONAL DESCUENTO -->
								<% if (ofertas[i].discount>0) { %>
									<span><% ofertas[i].discount %>  %OFF</span>
								<% } %>
								<p><%= ofertas[i].name %> </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% } %>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>